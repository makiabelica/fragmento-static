<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/verde"
    tools:context=".PrimerFragmento">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/txt_bienvenida"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="18sp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/texto_fragmento_1" />
    <ImageView
        android:id="@+id/imgufg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/iconogarantiaufg"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:maxHeight="150dp"
        android:layout_marginTop="25dp"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_indicacion_texto"
        android:textColor="@color/white"
        android:layout_marginTop="170dp"
        android:layout_marginLeft="20dp"
        android:text="@string/texto_indicacion_campo"
        android:layout_below="@+id/imgufg"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_texto_fragmento1"
        android:inputType="text"
        android:textSize="13sp"
        android:hint="@string/texto_placeholder"
        android:layout_marginLeft="22dp"
        android:minHeight="48dp"
        android:layout_marginTop="190dp"
        android:textColor="@color/white"
        android:layout_below="@+id/txt_indicacion_texto"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_boton"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="230dp"
        android:text="@string/texto_btn_enviar"
        android:layout_below="@+id/txt_texto_fragmento1"/>
</FrameLayout>